<h2>Edición de canciones</h2>

<form method="POST">
    <div class="form-group">
      <label for="nombre">Nombre</label>
      <input type="text" name="nombre" id="nombre" value="{{obj.nombre}}" class="form-control">
    </div>
    <div class="form-group">
        <label for="duracion">Duración</label>
        <input type="text" name="duracion" id="duracion" value="{{obj.duracion}}" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a href="/artistas/{{artista_id}}/canciones">Cancelar</a>
</form>
